{
  "compilerOptions": {
    "target": "es2019",
    "module": "NodeNext",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "moduleResolution":"node"
  },
  "include": ["./lib/**/*", "./cli/**/*","./defaultFilters/**/*.json","./config.default.json"],
}
